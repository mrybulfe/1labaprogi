<Window x:Class="_1labaprogi.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_1labaprogi"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="125"/>
            <RowDefinition Height="125"/>
            <RowDefinition/>
            </Grid.RowDefinitions>
        <StackPanel  Grid.Row="0" Orientation="Horizontal">
            <Button x:Name="CreateTriangle" Content="Произвольный треугольник" FontSize="13" Height="125" Width="200" Click="CreateTriangle_Click"/>
            <Button Content="Произвольный прямоугольник" FontSize="13" Height="125" Width="200" />
            <Button Content="Квадрат" FontSize="13" Height="125" Width="200" />
            <Button x:Name="ClearBordButton" Content="Отчистить доску" FontSize="13" Height="125" Width="200" Click="ClearBordButton_Click"/>
        </StackPanel>
                <Canvas x:Name="Scene" HorizontalAlignment="Left" Height="400" Margin="15,450,0,0" VerticalAlignment="Center" Width="770" />
    </Grid>
</Window>
