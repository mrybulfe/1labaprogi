<Window x:Class="_1labaprogi.CreatingFigures"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_1labaprogi"
        mc:Ignorable="d"
        Title="CreatingFigures" Height="180" Width="450">
    <Grid>
        <StackPanel  Grid.Row="0" Orientation="Horizontal">
            <Button x:Name="CreateTriangleSize" Content="Треугольник" FontSize="12" Height="125" Width="150" Click="CreateTriangleSize_Click" />
            <Button x:Name="CreateRectangleSize" Content="Прямоугольник" FontSize="10" Height="125" Width="150"  />
            <Button x:Name="CreareSquareSize" Content="Квадрат" FontSize="13" Height="125" Width="150" Click="CreareSquareSize_Click"  />
        </StackPanel>
    </Grid>
</Window>
